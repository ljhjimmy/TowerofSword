<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tower_home_cut">


    <TextView
        android:text="Best LV:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="96dp"
        android:id="@+id/TextViewRecordLv"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Best Floor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/TextViewRecordFloor"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/TextViewRecordLv"
        android:layout_alignStart="@+id/TextViewRecordLv" />

    <Button
        android:text="back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="41dp"
        android:id="@+id/buttonRecordBack"
        android:textSize="30sp"
        android:background="@drawable/buttonselect"
        android:layout_marginEnd="39dp"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewRecordLvNum"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/TextViewRecordLv"
        android:layout_alignBottom="@+id/TextViewRecordLv"
        android:layout_toEndOf="@+id/TextViewRecordLv"
        android:layout_marginStart="50dp" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewRecordFloorNum"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/TextViewRecordFloor"
        android:layout_alignBottom="@+id/TextViewRecordFloor"
        android:layout_alignStart="@+id/TextViewRecordLvNum" />

</RelativeLayout>
